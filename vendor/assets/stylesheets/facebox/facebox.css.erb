#facebox_overlay {
  position: fixed;
  top: 0px;
  left: 0px;
  height:100%;
  width:100%;
}

.facebox_hide {
  z-index:-100;
}

.facebox_overlayBG {
  background-color: #000;
  opacity:0.20!important;
  -ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=20)"!important; /*IE8*/
  z-index: 99;
	opacity:0.2!important;
}

* html #facebox_overlay { /* ie6 hack */
  position: absolute;
  height: expression(document.body.scrollHeight > document.body.offsetHeight ? document.body.scrollHeight : document.body.offsetHeight + 'px');
}
.facebox_scroll{ overflow:auto;}
 
