<% page_settings title: I18n.t(:'activerecord.models.property').pluralize %>
<% content_for :page_section do %>
    <%= render :partial => 'account/environment_tabs', :locals => {:selected => 'properties'} %>
<% end %>
<% content_for :page_section do %>
    <span></span>
<% end %>
<% content_for :sidebar do %>
    <p>
      <% if can?(:create, Property.new) %>
          <%= link_to image_tag('create_property.png'), new_property_path(:page => params[:page], :key => params[:key]) %>
      <% end %>
    </p>
    <hr/>
    <p>
      <%= link_to I18n.t(:'property.buttons.maps'), properties_maps_path %>
    </p>
<% end %>
<!-- PLEASE DO not bring this search box inside search result div, if there is any GUI issue fix it as per compatibility-->
