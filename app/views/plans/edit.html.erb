<%= static_javascript_include_tag "plans", "multi_select" %>
<h2><%= "Editing Plan Details #{@plan.name}" %></h2>
<%= form_for @plan, :url => plan_path(@plan),:remote => true, :html => { :method => :put, :class => 'cssform', :style => 'width:840px;'} do |f| %>
  <%= render :partial => 'form', :locals => { :f => f, :plan => @plan, :release_managers => @release_managers, :teams => @teams, :releases => @releases, :plan_templates => @plan_templates } %>
  <div class='button_bar'><%= submit_tag "Update",:class =>'button' %></div>
<% end %>

