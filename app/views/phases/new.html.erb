<% backlink = phases_path %>
<% title = 'Create New Execution Phase' %>
<% page_settings :title => title %>
<% content_for :page_section do %>
  <%= render 'account/environment_tabs', :selected => 'metadata' %>
<% end %>
<% content_for :sidebar do %>
  <span></span>
<% end %>
<%= render :partial => 'environments/metadata_heading', :locals => {:backlink => backlink, :title => title} %>
<br/>
<br/>
<%= form_for @phase, :html => { :class => 'cssform' } do |f| %>
  <%= f.error_messages %>

  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'initialFocus' %>
  </div>
  <span class="dynamic_fields">
    <div class="field">
        <label>Runtime Phase(s)</label>
        <%= text_field_tag "runtime_phases[]",nil,:size => 30 %>
    </div>
    
    <span id='field_for_clone' style="display:none;" >

      <div class='field' >
       <label>&nbsp;</label>
        <%= text_field_tag "runtime_phases[]",nil,:size => 30 %>
        |
        <%= link_to "remove", "#", :class => "remove_field" %>
      </div>
    </span>
    <span>
      <div class='field'>
        <label>&nbsp;</label>
        <%= link_to "more", '#', :id => "add_field" %>
      </div>
    </span>
  </span>
  <div class='field'>
    <%= f.submit I18n.t(:create), :class => "button" %>
    or
    <%= link_to 'cancel', backlink %>
  </div>
<% end %>

