<% related_object_type_package = ("package" == related_object_type) %>
<% if related_object_type_package && step.package_instance %>
  <%= render partial: "steps/step_rows/step_references", locals: { step: step, package_or_instance: :package_instance.to_s,
                                                                   references: step.package_instance.instance_references} %>
<% elsif related_object_type_package && step.package %>
  <%= render partial: "steps/step_rows/step_references", locals: { step: step, package_or_instance: :package.to_s,
                                                                   references: step.package.references} %>
<% else %>
  <%= javascript_tag("updateforall_loaded_properties()") %>
<% end %>
