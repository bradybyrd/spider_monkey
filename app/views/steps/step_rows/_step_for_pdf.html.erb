<% if step.procedure? %>
  <% step.steps.each do |proc_step| %>
    <%= render :partial => 'steps/step_rows/step_for_pdf.html', 
               :locals => { :step => proc_step, :request => request, :parent => step, 
                            :unfolded => unfolded,
                            :steps_with_invalid_components => steps_with_invalid_components,
                            :step_headers => step_headers } %>
  <% end %>

<% else %>
      <%= render :partial => 'steps/step_rows/step_show_form_for_pdf.html', :locals => { :request => request, :step => step, :unfolded => unfolded,  :details  =>  local_assigns[:details],
                                                                          :invalid_component => steps_with_invalid_components.include?(step) } %>
<% end %>
