<div id="<%= dom_id(step) %>" class="step <%= class_for_component_color(step) %>">
   <span class=<%= step.not_movable? ? 'not_movable' : '' %>>
	  <p>
	    <%= link_to image_tag('triangle_folded.gif'), expand_procedure_request_step_path(request, step), :class => 'expand_procedure' %>
	    <span class="step_number"><%= step.number %></span>
	    <%= h step.name %>
	  </p>
  </span>
  <p><%= step.steps.count %> steps</p>

  <!-- form is used for drag and drop steps -->
  <%= form_tag update_position_request_step_path(request, step), :method => :put do %>
  <% end %>
</div>
