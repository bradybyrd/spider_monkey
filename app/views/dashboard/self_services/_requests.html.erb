<div id="request_and_calendar">
  <% if @request_dashboard[:can_view_requests_list] %>
    <div style="clear:left;text-align: right">
      <div id="toggleFilterLink">
        <% if params[:filter_block_collapse_state_flag] == '1' %>
          <%= link_to 'Close Filters', '#', id: 'close_request_filters', class: 'filterSection' %>
        <% else %>
          <%= link_to 'Open Filters', '#', id: 'close_request_filters', class: 'filterSection' %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div id="filterSection">
    <% if @request_dashboard[:request_filters] %>
      <%= render 'requests/filters' %>
    <% else %>
      <%= render 'dashboard/filters/filters' %>
    <% end %>
  </div>

  <%= render 'core_content', requests: @request_dashboard[:requests] %>
  <%= render 'dashboard/request_pagination_dashboard' %>
  <%= javascript_tag("sortable_table_header_arrow_assignment()") %>
</div>

<%= javascript_tag("#{toggel_inbound_outbound_section_links(false)}") %>
