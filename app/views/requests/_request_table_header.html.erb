<tr>
  <%= sortable_th 'Status', :column => 'aasm_state' %>
  <%= sortable_th 'Id', :column => 'id' %>
  <%= sortable_th 'Name', :column => 'name' %>
  <%= sortable_th 'Owner', :column => 'owner' %>
  <%= sortable_th 'Release', :column => 'release', :class => 'hideRelease' %>
  <%= content_tag('th', 'RP/P') %>
  <%= sortable_th 'App', :column => 'app' %>
  <%= sortable_th 'Env', :column => 'environment' %>
  <th>DW</th>
  <%= sortable_th 'Scheduled', :class => 'scheduled', :column => 'scheduled_at' %>
  <%= sortable_th 'Duration', :column => 'duration' %>
  <%= sortable_th 'Due', :column => 'target_completion_at' %>
  <%= content_tag('th', 'Steps') %>
  <%= sortable_th 'Created', :column => 'created_at' %>
  <th data_column="participants">Participants</th>
  <% if @request_dashboard[:page_path].match(/bulk_destroy/) %>
    <th class="check_all">
      <%= check_box_tag :select_all_chk, '1', false,
                        check_box_dom: '.requestList tbody tr td',
                        onclick: 'select_bulk_requests($(this))'
      %>
    </th>
  <% end %>
</tr>
