<% unless @report_view %>
	Order by: 
	<%= link_to 'time', activity_by_time_request_path(request), :class => 'activity_ordering' %> |
	user |
	<%= link_to 'step', activity_by_step_request_path(request), :class => 'activity_ordering' %>
<% end %>
<ul id="activities">
  <% log_groups.each do |log_group| %>
  <li>
    <%= h log_group.first %>:
    <ul>
      <% log_group[1].each do |log| %>
        <li>
          <%= log.created_at.default_format %> -
          <%= h(log.activity) %>
        </li>
      <% end %>
    </ul>
  </li>
  <% end %>  			
</ul>


