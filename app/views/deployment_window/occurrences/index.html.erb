<% backlink = deployment_window_series_index_path %>
<% task_title = "#{@series.name} occurrences" %>
<% page_settings :title => task_title %>

<% content_for :page_section do %>
    <%= render 'account/environment_tabs', :selected => 'metadata' %>
<% end %>
<%= render 'environments/metadata_heading', backlink: backlink,
                                            title: task_title %>

<%= render 'filters' %>

<div id="occurrence-list" class="list">
  <% unless @series.occurrences_ready? %>
      <div class="occurrences_ready_warning">
        <%= t('deployment_window.occurrence_will_be_generated') %>
      </div>
  <% end %>

  <% if @occurrences.empty? %>
      <div class='blank_data_msg'>
        <%= t('deployment_window.none_at_this_time') %>
      </div>
  <% else %>
      <%= render 'list', scope: :unarchived %>
  <% end %>
</div>
