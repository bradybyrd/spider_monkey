<table class='formatted_table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <% if show_relationship %>
        <th>Value Holder</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% extended_attributes.each do |attr| %>
      <tr <%= tag_options({:class => cycle('', 'alt')}, false) %>>
        <td><%= h(attr.name) %></td>
        <% if local_assigns[:translations] && local_assigns[:translations].has_key?(h(attr.name)) %>
          <td><%= h(local_assigns[:translations][h(attr.name)][h(attr.value_text)]) || h(attr.value_text) %></td>
        <% else %>
          <td><%= h(attr.value_text) %></td>
        <% end %>
        <% if show_relationship %>
          <td><%= h("#{attr.value_holder_type}[#{attr.value_holder_id}]") %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
