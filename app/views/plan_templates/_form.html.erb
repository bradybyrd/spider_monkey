<%= form_for(@plan_template, :html => { :class => 'cssform' }) do |f| %>
  <% if @plan_template.errors.any? %>
    <div id="errorExplanation" class="errorExplanation">
      <h2><%= t('activerecord.errors.template.header', :model => PlanTemplate.model_name.human, :count => @plan_template.errors.count) %></h2>

      <ul>
      <% @plan_template.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'initialFocus' %>
  </div>
  <div class="field">
    <%= f.label :template_type %>
    <%= f.select :template_type, PlanTemplate::TYPES, :include_blank => "Select" %>
  </div>
  <div class="actions">
    <%= f.submit t(:l10n_frm_create), :class => "button" if is_create %>
    <%= f.submit t(:l10n_frm_update), :class => "button" if !is_create %>
    or 
    <%= link_to t(:l10n_frm_cancel), backlink %>
  </div>
<% end %>
