<% page_settings title: I18n.t(:'activerecord.models.environment') %>
<% content_for :page_section do %>
    <%= render :partial => 'account/environment_tabs', :locals => {:selected => 'environments'} %>
<% end %>
<% content_for :sidebar do %>
    <% if can?(:create, Environment.new) %>
        <%= link_to I18n.t(:'environment.buttons.add_new'), new_environment_path(:page => params[:page], :key => params[:key]) %>
        <% unless Environment.has_default? %>
            |
            <%= link_to I18n.t(:'environment.buttons.add_default'), create_default_environments_path, :method => :post %>
        <% end %>
    <% end %>
<% end %>
<div class='server_search'>
  <%= search_box('/environment/environments') %>
</div>
<div id='search_result'><%= render :partial => 'index' %></div>
