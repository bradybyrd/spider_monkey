<% page_settings :title => I18n.t(:'environment.create') %>
<% content_for :page_section do %>
    <%= render :partial => 'account/environment_tabs', :locals => {:selected => 'environments'} %>
<% end %>
<% content_for :sidebar do %>
    <span></span>
<% end %>
<h2 class='no_margin servers_h2'><%= I18n.t(:'environment.create') %></h2>
<%= form_for @environment, :html => {:class => 'cssform'} do |f| %>
    <%= render :partial => 'form', :locals => {:f => f, :servers => @servers, :server_groups => @server_groups} %>
    <div class='field'>
      <%= f.submit I18n.t(:create), :class => "button" %>
      <%= I18n.t(:or) %>
      <%= link_to I18n.t(:cancel), environments_path(:page => params[:page], :key => params[:key]) %>
    </div>
<% end %>

