<% backlink = package_contents_path %>
<% title = 'Create Package Contents' %>
<% page_settings :title => title %>
<% content_for :page_section do %>
  <%= render 'account/environment_tabs', :selected => 'metadata' %>
<% end %>
<% content_for :sidebar do %>
  <span></span>
<% end %>
<%= render :partial => 'environments/metadata_heading', :locals => {:backlink => backlink, :title => title} %>
<br>
<br>
<%= form_for @package_content, :html => { :class => 'cssform' } do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <div class='field'>
    <%= f.submit I18n.t(:create), :class => "button" %>
    <%= link_to 'Cancel', backlink , :class => "button" %>
  </div>
<% end %>

