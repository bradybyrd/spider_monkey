<%= form_tag plan_integration_csvs_path(@plan), :target => "frame", :multipart => true, :method => :post, :class => "cssform"  do %>
  <div id='csv_errors'></div>
  <div class='field'>
    <%= label_tag :name %>
    <%= text_field_tag 'integration_csv[name]' %>
    <%= hidden_field_tag 'integration_csv[plan_id]', @plan.id %>
    <%= hidden_field_tag 'tab_id', @tab_id %>
  </div>
  <div class='field'>
    <%= label_tag :integration %>
    <%= project_server_list("integration_csv") %>
  </div>
  <div class='field'>
    <%= label_tag :csv %>
    <%= file_field_tag :csv %>
  </div>
  <div id='csv_headers'></div>
  <%= hidden_field_tag 'integration_csv[can_be_saved]', false %>
  <p>
    <%= submit_tag "Upload CSV",:class =>'button' %>
  </p>
<% end %>

<iframe id='frame' name='frame' style='display:none;'></iframe>
