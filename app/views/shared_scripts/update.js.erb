$('table#scripts_list tr').each(function() {
    if($(this).attr('rel') == 'script_<%= @script.id %>_row') {
       $(this).find('a.append_row:first').html("<div class='truncated' style='font-weight: bold;'><%= truncate(@script.name, :length => 25) %></div>");
       $(this).find('td.name').attr('title', '<%= truncate(@script.name, :length => 25) %>');
       $(this).find('td.description').html('<%= truncate(@script.description, :length => 25) %>');
       $(this).find('td.unique_identifier').html('<%= truncate(@script.unique_identifier, :length => 25) %>');
       $(this).find('td.automation_category').html('<%= @script.automation_category %>');
       $(this).find('td.automation_type').html('<%= @script.automation_type %>');
       $(this).find('td.render_as').html('<%= @script.render_as %>');
       $(this).show();
    }
    if($(this).attr('id') == 'script_<%= @script.id %>_row') {
       $(this).remove();
    }
});
