$('table#scripts_list tr').each(function() {
    if($(this).attr('rel') == 'script_<%= @script.id %>_row') {
       $(this).find('a.append_row strong').html('<%= @script.name %>');
       $(this).find('td:first').next().html('<%= @script.description %>');
       $(this).show();
    }
    if($(this).attr('id') == 'script_<%= @script.id %>_row') {
       $(this).remove();
    }
});
