<% draw_tabs selected: selected, only_ul: local_assigns[:only_ul] ? only_ul : nil, ul_class: local_assigns[:ul_class] ? ul_class : nil do %>

    <% if can?(:view, GlobalSettings.new) %>
        <%= sub_tab I18n.t(:'tabs.general'), path: settings_path %>
    <% end %>

    <% if can?(:manage_calendar_preferences, GlobalSettings.new) %>
        <%= sub_tab I18n.t(:'tabs.calendar_preferences'), path: calendar_preferences_path %>
    <% end %>

    <% if can?(:list, NotificationTemplate.new) %>
        <%= sub_tab I18n.t(:'tabs.notification_template'), path: notification_templates_path %>
    <% end %>

<% end %>
