<% form_tag activities_path(:activity_category_id => @activity_category.id), :method => :get do %>
  <%= current_budget_year %>
  <%= hidden_field_tag :activity_category_id, @activity_category.id %>
  <%= text_field_tag :key, session["activity_filters_#{@activity_category.id}_search"], :size => '15' %>
  <%= submit_tag 'Search' %>
  <%= link_to "clear", activities_path(:activity_category_id => @activity_category.id, "clear_activity_filters_#{@activity_category.id}_search" => true) %>
<% end %>