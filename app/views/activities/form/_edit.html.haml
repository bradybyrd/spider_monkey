#error_messages
= validation_set_fields(@activity_tab.activity_attributes.select{|aa|aa.required?}.map(&:field))
= hidden_field_tag "activity_tab_id", params[:activity_tab_id] || @activity_tab.try(:id)
- @activity_tab.activity_attributes.each do |attr|
  .field{ :class => "#{attr.input_type} #{attr.field}" }
    = render 'field', :activity => @activity, :attr => attr, :activity_category => @activity.activity_category, :disabled => attr.disabled_on?(@activity_tab)
- unless @activity_tab.read_only?
  - if current_user.present?
    .field
      = submit_tag "Update", :class => "activity-update form_button"
      or
      = link_to 'cancel', activities_path, :class => "cancel-pending"
      %span#pending