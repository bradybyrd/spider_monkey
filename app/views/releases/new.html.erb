<% backlink = releases_path %>
<% title = "Create New Release" %>
<% page_settings :title => title %>
<% content_for :page_section do %>
  <%= render 'account/environment_tabs', :selected => 'metadata' %>
<% end %>
<% content_for :sidebar do %>
  <span></span>
<% end %>
<%= render :partial => 'environments/metadata_heading', :locals => {:backlink => backlink, :title => title} %>
<br>
<br>
<%= form_for(@release, :html => {:class => 'cssform'}) do |f| %>
  <%= f.error_messages %>
  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'initialFocus' %>
  </div>
  <div class='field'>
    <%= f.submit I18n.t(:create), :class => "button" %>
    or
    <%= link_to 'cancel', releases_path %>
  </div>
<% end %>

