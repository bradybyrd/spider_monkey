<% backlink = manage_metadata_path %>
<% title = I18n.t(:'activerecord.models.version_tag') %>
<% page_settings :title => title %>

<% content_for :page_section do %>
    <%= render 'account/environment_tabs', :selected => 'metadata' %>
<% end %>

<% content_for :sidebar do %>
    <% if can?(:create, VersionTag.new) %>
        <%= button_to I18n.t(:'version_tag.buttons.add_new'), new_version_tag_path, :method => :get, :class => 'button' %>
        <br/>
        <%= button_to I18n.t(:'version_tag.buttons.bulk_create'), bulk_create_version_tags_path, :method => :get, :class => 'button' %>
    <% end %>
<% end %>

<%= render :partial => 'environments/metadata_heading', :locals => {:backlink => backlink, :title => title} %>

<br class='clear'/>
<div id="search_result">
  <% if can?(:list, VersionTag.new) %>
      <%= render :partial => 'ajax_search_section' %>
  <% end %>
</div>

